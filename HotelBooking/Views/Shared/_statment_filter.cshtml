<div class="row " id="printhide">
    <div class="col-lg-12">
        <div class="div-box-shadow">
            <div class="cards">
                <form role="form">
                    <div class="cards-body">
                        <div class="row justify-content-center">
                            <div class="col-lg-4">
                                <div class="form-group">
                                    <label class="col-form-label">Account Name</label>
                                    @Html.DropDownListFor(model => model.LedgerID, Model.AllLedgers, "Account", new { @class = "form-select" })
                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="form-group">
                                    <label class="col-form-label">Transaction Type</label>
                                    @Html.DropDownListFor(model => model.TransactionTypeID, Model.AllTransactionTypes, "Type", new { @class = "form-select" })
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="cards-body">
                        <div class="row justify-content-center">
                            <div class="col-lg-4">
                                <div class="form-group">

                                    <label class="col-form-label">From Date</label>
                                    <input type="text" name="DateFrom" class="form-control date-format" placeholder="December 21, 2022" value="@Model.DateFrom.ToString("MMMM-dd-yyyy")">

                                </div>
                            </div>
                            <div class="col-lg-4">
                                <div class="form-group">

                                    <label class="col-form-label">To Date</label>
                                    <input type="text" name="Dateto" class="form-control date-format" placeholder="December 21, 2022" value="@Model.Dateto.ToString("MMMM-dd-yyyy")">

                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="cards-body">
                        <div class="row justify-content-center">
                            <div class="col-12">
                                <button id="viewReport" type="submit"
                                        class="btn btn btn-primary btn-primary">
                                    <i class="fas fa-eye"></i> View Report
                                </button>
                                <button type="reset"
                                        class="btn btn-secondary float-right">
                                    <i class="fas fa-power-off"></i> Reset
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>