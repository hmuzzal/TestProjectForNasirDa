<div class="content-wrap ledger-table" id="headertemplate">
    <div class="card">
        <div class="card-body">
            <div class="official-reciept-wrap">
                <div class="row border-blue-b mb-4 pb-2 mx-3">
                    <div id="invoiceInfo" class="col-md-6">
                        <div class="invoice-info">
                            <div class="company-name">

                                <img src="~/Resources/Organization/Organization.jpg" />
                            </div>

                        </div>
                    </div>
                    <div class="col-md-6 text-end">
                        <div class="reciept-title">
                            <h2>@Model.ReportName</h2>
                            <div class="row my-1">
                                @if (Model.ReportName == "Balance Sheet" || Model.ReportName == "Trial Balance")
                                {
                                    <div class="col text-end account-period-border"><span class="">As of  @Model.Dateto.ToString("dd-MMM-yy")</span></div>
                                }
                                else if (Model.ReportName == "Monthly Summary Report")
                                {
                                    <div class="col text-end account-period-border"><span class="">for the  @Model.MonthName, @Model.YearN</span></div>
                                }
                                else if (Model.ReportName == "Customer & Supplier Balance")
                                {
                                    <div class="col text-end account-period-border"><span class=""></span></div>
                                }
                                else
                                {
                                    <div class="col text-end account-period-border"><span class="">@Model.DateFrom.ToString("dd-MMM-yy") to @Model.Dateto.ToString("dd-MMM-yy")</span></div>
                                }

                            </div>

                        </div>
                    </div>
                </div>

                @*<div class="row border-blue-b mb-4 pb-2 mx-3">
                    <div id="invoiceInfo" class="col-md-6">
