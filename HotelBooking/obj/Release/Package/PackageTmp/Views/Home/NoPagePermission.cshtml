
@{
    ViewBag.Title = "NoPagePermission";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .content-wrap {
        width: 100%;
        height: 70vh;
    }

    .bg-pencil {
        background-image: url(../../Content/broken-pencil.jpg);
        background-size: contain;
        background-repeat: no-repeat;
        background-position: bottom;
        height: 38vh;
        width: 45%;
        position: relative;
        z-index: 1;
        margin: auto;
    }

    .card {
        background: transparent;
        padding-top: 115px;
    }

    .error-body h1 {
        font-size: 90px;
        font-weight: 600;
    }
</style>

<section id="wrapper" class="error-page">
    <div class="content-heading-wrap">
        <div class="d-flex w-100 justify-content-center align-items-center page-titles">
            <div class="col-lg-4 col-md-3 text-center">
                <h5 class="text-themecolor">No Page Permission </h5>
            </div>
            @*<div class="col-lg-8 col-md-9 align-self-center text-right">
                <div class="d-flex justify-content-end align-items-center">
                    <ul class="mx-2 path-link">
                        <li class="d-inline-block">
                             <a href="@Url.Action("Index", "Home")"> Dashboard</a>
                        </li>
                    </ul>
                </div>
            </div>*@
        </div>
    </div>
    <div class="content-wrap">
        <div class="bg-pencil">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body">
                            <div class="error-box">
                                <div class="error-body text-center">
                                    <h1 class="text-danger" style="text-shadow: 4px 4px 0 #fff, 6px 6px 0 #343a40;">401</h1>
                                    <h2 class="mb-1">Hi, @Session["Email"].ToString() </h2>
                                    <h3 class="text-uppercase text-warning">Unauthorized Access!</h3>
                                    <p class="my-3 text-muted">YOU SEEM TO BE TRYING TO FIND HIS WAY HOME</p>
                                    <a href="@Url.Action("Index", "Home")" class="btn btn-dark my-2 btn-rounded waves-effect waves-light m-b-40">Back to home</a>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>